@model BookShop.Web.Models.EmailConfirmationModel
@{
    ViewData["Title"] = "Email Confirmation";
}

<div class="w-screen h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-md bg-white p-8 rounded shadow-md flex flex-col items-center">
        <i class="fa-solid fa-envelope-circle-check text-5xl text-sky-600 mb-4"></i>
        <h2 class="text-2xl font-bold mb-4 text-center text-sky-600">Email Confirmation</h2>
        <p class="text-center text-gray-700 mb-2">
            Please check your email @Model.Email to finish user registration.
        </p>
    </div>
</div>
