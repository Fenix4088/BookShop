@{
    ViewData["Title"] = "Login";
}

<div class="w-screen h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-md bg-white p-8 rounded shadow-md">
        <h2 class="text-2xl font-bold mb-6 text-center text-sky-600">Login</h2>
        <form method="post" class="flex flex-col space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="email" placeholder="Email" value="admin@bookshop.com"
                   class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-sky-600"/>
            <input name="password" type="password" placeholder="Password" value="Admin123!"
                   class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-sky-600"/>
            <button type="submit"
                    class="bg-sky-600 text-white font-bold py-2 px-4 rounded transition duration-300 hover:bg-sky-700">
                Login
            </button>
        </form>
        <div class="mt-4 text-center">
            <a href="/Account/Register" class="text-sky-600 hover:underline">Don't have an account? Register</a>
        </div>
    </div>
</div>