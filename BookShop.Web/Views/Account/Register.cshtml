@{
    ViewData["Title"] = "Register";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-md bg-white p-8 rounded shadow-md">
        <h2 class="text-2xl font-bold mb-6 text-center text-sky-600">Register</h2>
        <form method="post" class="flex flex-col gap-y-4">
            <input name="email" placeholder="Email" class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-sky-600" />
            <input name="password" type="password" placeholder="Password" class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-sky-600" />
            <button type="submit" class="bg-sky-600 text-white font-bold py-2 px-4 rounded transition duration-300 hover:bg-sky-700">Register</button>
        </form>
        <div class="mt-4 text-center">
            <a href="/Account/Login" class="text-sky-600 hover:underline">Already have an account? Login</a>
        </div>
    </div>
</div>