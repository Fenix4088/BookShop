@model RatingViewModel;

<div class="flex items-center">
    @for (var i = 0; i < 5; i++) {
        <form asp-action="RateItem" asp-controller="Rating" method="post">
            <input type="hidden" name="itemType" value="@Model.ItemType"/>
            <input type="hidden" name="itemId" value="@Model.ItemId"/>
            <input type="hidden" name="score" value="@(i + 1)"/>
            <button>
                <div class="star">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         class="@("w-4 h-4 hover:text-yellow-300 transition-colors" + (i < Model.Rating ? " text-yellow-300" : " text-gray-300"))"
                         viewBox="0 0 22 20" fill="currentColor" aria-hidden="true">
                        <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.030L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                    </svg>
                </div>
            </button>
        </form> 
    }
</div>
